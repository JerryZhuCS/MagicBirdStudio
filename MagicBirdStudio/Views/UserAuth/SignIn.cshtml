@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
@{
    ViewBag.Title = "MagicBird 登陆页";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <a href="/">
                        <img src="~/Content/Sources/Images/icons/MagicBirdAuth.svg"/>
                    </a>
                </div>
                <div class="panel-body">
                    <form role="form">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="用户名/邮箱" name="username" type="text" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="请输入..." name="password" type="password" value="">
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <a href="@Url.Action("Index","Home")" class="btn btn-lg btn-success btn-block">登陆</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>